<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <a class="nav-item nav-link" href="/urls">My URLs</a>
      <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
    </div>
    <% if (user) { %>
      <h6>Logged in as: <%= user.email %></h6>
      <form class="form-inline" method="POST" action="/logout">
        <div class="form-group mb-2" style="width: 100%; margin-left: 1em">
          <button type="submit" class="btn btn-outline-dark" value="logout">Logout</button>
        </div>
      </form>
    <% } else { %>
      <form class="form-inline" method="POST" action="/login">
        <div class="form-group mb-2" style="width: 100%; justify-content: right">
          <button type="submit" class="btn btn-outline-dark" value="login"><a href="/login">Login</a></button>
        </div>
      </form>
      <form class="form-inline" method="POST" action="/register">
        <div class="form-group mb-2" style="width: 100%; justify-content: right; margin-left: 1em">
          <button type="submit" class="btn btn-outline-dark" value="register"><a href="/register">Register</a></button>
        </div>
      </form>
    <% } %>
  </nav>
</header>